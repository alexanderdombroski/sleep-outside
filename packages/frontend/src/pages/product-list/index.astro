---
import Layout from "../../layouts/Layout.astro";
import Tent from "../../assets/category-icons/tent.svg?url";
import SleepingBag from "../../assets/category-icons/sleeping-bag.svg?url";
import Hammock from "../../assets/category-icons/hammock.svg?url";
import Backpack from "../../assets/category-icons/backpack.svg?url";
import ProductList from "../../components/ProductList.svelte";
const title = "Home";
---

<Layout title={title}>
  <slot class="divider">
    <div class="categories">
      <a href="/product-list?category=tents"
        ><img src={Tent} alt="Tent Icon" />Tents</a
      >
      <a href="/product-list?category=sleeping-bags"
        ><img src={SleepingBag} alt="Sleeping Bag Icon" />Sleeping Bags</a
      >
      <a href="/product-list?category=hammocks"
        ><img src={Hammock} alt="Hammock Icon" />Hammocks</a
      >
      <a href="/product-list?category=backpacks"
        ><img src={Backpack} alt="Backpack Icon" />Backpacks</a
      >
    </div>
    <ProductList client:load />
  </slot>
</Layout>

<style>
  .categories {
    display: flex;
    justify-content: space-around;
    padding: 2rem 0;
  }
</style>
